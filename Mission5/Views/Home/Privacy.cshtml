@{
    ViewData["Title"] = "Juggling Tips";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="site.js"></script>
</head>
<body>
    <div class="calculator">
        <h1 class="calculator__title">Hourly Rate Calculator</h1>
        <div class="calculator__input">
            <label for="hours" class="calculator__label">Number of Hours:</label>
            <input type="number" id="hours" class="calculator__input-field" min="0">
        </div>
        <div class="calculator__input">
            <label for="rate" class="calculator__label">Hourly Rate:</label>
            <input type="text" id="rate" class="calculator__input-field" value="$50" readonly>
        </div>
        <button id="calculate" class="calculator__button">Calculate Total</button>
        <div class="calculator__result">
            <label for="total" class="calculator__label">Total:</label>
            <input type="text" id="total" class="calculator__input-field" readonly>
        </div>
    </div>
</body>
</html>


